
@{
    ViewBag.Title = "ShopingCart";
    Layout = "~/Views/_Home.cshtml";
}

<div class="columns-container">
    <div class="container" id="columns">
        <!-- page heading-->
        <h2 class="page-heading">
            <span class="page-heading-title">Shopping Cart</span>
        </h2>
        <!-- ../page heading-->
        <div class="page-content page-order">

            <div class="heading-counter warning">
                <span class="fa fa-shopping-cart"></span> Your shopping cart contains:
                <span id="count-cart" style="font-weight: bold">1</span> <span> Products</span>
            </div>
            <div class="order-detail-content">
                <table class="table table-bordered table-responsive cart_summary">
                    <thead>
                        <tr>
                            <th class="cart_product">Product</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Unit price</th>
                            <th>Qty</th>
                            <th>Total</th>
                            <th class="action"><i class="fa fa-trash-o"></i></th>
                        </tr>
                    </thead>
                    <tbody id="show-item-cart"></tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2" rowspan="1"></td>
                            <td colspan="3"><strong>Total(tax incl.)</strong></td>
                            <td colspan="1" id="total_price" style="font-weight: bold; color: #e84d1c; font-size: 20px;">54,000</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
                <div class="cart_navigation">
                    <a class="prev-btn" href="index.html">Continue shopping</a>
                    <a class="next-btn" href="check-out.html">Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>


