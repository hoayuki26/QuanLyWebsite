@model IEnumerable<BTL.Model2.DatHangDetail>

@{
    ViewBag.Title = "getCTDHByDH";
    Layout = "~/Views/_Home.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Quản lý chi tiết đơn hàng</h2>

                        <ul class="nav navbar-right panel_toolbox">

                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>

                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
                            <thead>
                                <tr>

                                    <th><input type="checkbox" id="check-all" class="flat"></th>
                                    <th>Mã ĐH</th>
                                    <th>Tên SP</th>
                                    <th>Ảnh</th>
                                    <th>Số lượng</th>
                                    <th>Giá</th>
                                    <th>Giảm Giá</th>
                                    <th>Tổng tiền</th>

                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            <input type="checkbox" id="check-all" class="flat" />
                                        </td>
                                        <td>@item.MaDH</td>
                                        <td>@item.TenSP</td>
                                        <td><img src="~/Asset/images/product-detail/@item.Anh" style="width:50px;height:50px;" /></td>
                                        <td>@item.SoLuong</td>
                                        <td>@item.Gia</td>
                                        <td>@item.GiamGia</td>
                                        <td>@item.Tongtien</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
