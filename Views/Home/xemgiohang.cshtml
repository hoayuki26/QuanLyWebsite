@model IEnumerable<BTL.Model2.GioHang>
@{
    ViewBag.Title = "xemgiohang";
    Layout = "~/Views/_Home.cshtml";
}
@{ var t = ViewBag.tongtien;}
<div class="columns-container">
    <div class="container" id="columns">
        <!-- page heading-->
        <h2 class="page-heading">
            <span class="page-heading-title">Giỏ hàng</span>
        </h2>
        <!-- ../page heading-->
        <div class="page-content page-order">

            <div class="heading-counter warning">
                <span class="fa fa-shopping-cart"></span> Các sản phẩm trong giỏ hàng:
                <span id="count-cart" style="font-weight: bold">@ViewBag.count</span> <span> Sản phẩm</span>
            </div>
            <div class="order-detail-content">
                <table class="table table-bordered table-responsive cart_summary">
                    <thead>
                        <tr>
                            <th class="cart_product">Ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Đơn Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th class="action"><i class="fa fa-trash-o"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var tt = item.SL * item.Gia;
                            <tr>
                                <td class="cart_product"><img src="~/Asset/images/product-detail/@item.Anh" /></td>
                                <td>@item.Ten</td>
                                <td>@string.Format("{0:#,##0}", item.Gia)</td>
                                <td>@item.SL</td>
                                <td>@string.Format("{0:#,##0}", tt)</td>
                                <td class="action"><i class="fa fa-trash-o"></i></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            @*<td colspan="2" rowspan="1"></td>*@

                            <td colspan="4"><strong>Tổng tiền</strong></td>
                            <td colspan="1" id="total_price" style="font-weight: bold; color: #e84d1c; font-size: 20px;">@t</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
                <div class="cart_navigation">
                    <a class="prev-btn" href="/Home/Index">Tiếp tục mua hàng</a>
                    <a class="next-btn" href="/Home/checkout">Thanh toán</a>
                </div>
            </div>
        </div>
    </div>
</div>


