    </div><!--/.sidebar-->
     <div id="sidebar-collapse" class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                <div class="row">
                </div>
                <div class="row">
                    <ol class="breadcrumb">
                        <li><a href="http://localhost:64122/Admin/Index"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                        <li class="active">Sản phẩm</li>
                    </ol>
                </div><!--row-->
                <h3><span id="message"></span></h3>
     </div>       
        <div class="row">
            <div class="col-lg-12">
                <form action="" method="post">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div id="sidebar-collapse" class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                                <div class="row">
                                 </div>

                                <div class="row">
                                    <div class="col-md-8">
                                        Quản lý sản phẩm
                                    </div>
                                    <div>
                                        <a href="http://localhost:64122/SanPhams/Create" class="btn btn-primary" onclick="themdonhang()">Thêm sản phẩm</a>
                                        @*<p>
            @Html.ActionLink("Tạo mới", "Create")
        </p>*@
                                    </div>
                                </div><!--/.row-->
                                <h3><span id="message"></span></h3>
                                <div>                                    
                                    <table class="table table-bordered table-striped" id="example" style="width:100%; height:100%">

                                        <tr>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.TenSP)*@
                                                <label>Tên Sản phẩm</label>
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.Mota)*@
                                                <label>Mô tả</label>
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.SL)*@
                                                <label>Số lượng</label>
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.Dongia)*@
                                                <label>Giá tiền</label>
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.MaLoai)*@
                                                <label>Mã loại</label>
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.Anh)*@
                                                <label>Ảnh</label>
                                            </th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenSP)
                                            </td>
                                            <td>
                                                @*@Html.DisplayFor(modelItem => item.Mota)*@
                                                @{
                                                    string[] a = item.Mota.ToString().Split(new string[] { " " }, StringSplitOptions.None);
                                                    string tam = "";
                                                    if (a.Length < 12)
                                                    {
                                                        tam = item.Mota;
                                                    }
                                                    else
                                                    {
                                                        for (int i = 0; i < 12; i++)
                                                        {
                                                            tam += a[i] + " ";
                                                        }
                                                        tam += "...";
                                                    }
                                                }
                                                <div title="@item.Mota">
                                                    @tam
                                                </div>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SL)
                                            </td>
                                            <td>
                                                @*@Html.DisplayFor(modelItem => item.Dongia)*@
                                                <span>@string.Format("{0:#,##0}", item.Dongia)</span>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MaLoai)
                                            </td>
                                            <td>
                                                @*@Html.DisplayFor(modelItem => item.Anh)*@
                                                <img src="~/Asset/images/product-detail/@item.Anh" width="50px" height="50px" />
                                            </td>
                                            <td>
                                                <a class="btn btn-warning" href="http://localhost:64122/SanPhams/Edit/@item.MaSP"><i class="glyphicon glyphicon-pencil"></i></a>
                                                
                                            </td>
                                            <td><a class="btn btn-info" href="http://localhost:64122/SanPhams/Details/@item.MaSP"><i class="glyphicon glyphicon-eye-open"></i></a></td>
                                            <td><a class="btn btn-danger" href="http://localhost:64122/SanPhams/Delete/@item.MaSP"><i class="glyphicon glyphicon-trash"></i></a></td>
                                        </tr>
                                        }

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    
</body>
</html>